<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default" namespace="/">
        <action name="login" class="phuctt.actions.LoginAction">
            <result name="fail">publicPage/login.jsp</result>
            <result name="admin">admin/home.jsp</result>
            <result name="member">publicPage/index.jsp</result>
        </action>
        
        <action name="logout" class="phuctt.actions.LogoutAction">
            <result name="success">publicPage/index.jsp</result>
        </action>
        
        <action name="signup" class="phuctt.actions.SignUpAction">
            <result name="success" type="chain">login</result>
            <result name="fail">publicPage/signup.jsp</result>
        </action>
        
        <action name="adminViewProfile" class="phuctt.actions.AdminViewProfileAction">
            <result name="success">admin/edit-profile.jsp</result>
            <result name="fail" type="chain">logout</result>
        </action>
        
        <action name="adminEditProfile" class="phuctt.actions.AdminEditProfileAction">
            <result name="success" type="chain">adminViewProfile</result>
            <result name="fail">admin/home.jsp</result>
        </action>
        
        <action name="changePassword" class="phuctt.actions.ChangePasswordAction">
            <result name="success">admin/home.jsp</result>
            <result name="fail">admin/change-password.jsp</result>
        </action>
        
        <action name="addAdmin" class="phuctt.actions.AddAdminAction">
            <result name="success" type="chain">adminViewListAdmin</result>
            <result name="fail">admin/add-admin.jsp</result>
        </action>
        
        <action name="loadCategoryType" class="phuctt.actions.LoadCategoryTypeAction">
            <result name="accessory">admin/add-accessory.jsp</result>
            <result name="service" type="chain">loadStaff</result>
            <result name="fail">admin/home.jsp</result>
        </action>
        
        <action name="loadStaff" class="phuctt.actions.LoadStaffAction">
            <result name="service">admin/add-service.jsp</result>
            <result name="fail">admin/home.jsp</result>
        </action>
        
        <action name="addAccessory" class="phuctt.actions.AddAccessoryAction">
            <interceptor-ref name="fileUpload">
                <param name="maximumSize">2102840</param>
                <param name="allowedTypes">image/png,image/jpeg,image/jpg</param>
            </interceptor-ref>
            <interceptor-ref name="basicStack"></interceptor-ref>
            <result name="success" type="chain">adminViewListAccessory</result>
            <result name="fail" type="redirectAction">
                <param name="actionName">loadCategoryType</param>
                <param name="locationPlace">accessory</param>
                <param name="mess">${mess}</param>
            </result>
        </action>
        
        <action name="addStaff" class="phuctt.actions.AddStaffAction">
            <interceptor-ref name="fileUpload">
                <param name="maximumSize">2102840</param>
                <param name="allowedTypes">image/png,image/jpeg,image/jpg</param>
            </interceptor-ref>
            <interceptor-ref name="basicStack"></interceptor-ref>
            <result name="success">admin/home.jsp</result>
            <result name="fail">admin/add-staff.jsp</result>
        </action>
        
        <action name="addService" class="phuctt.actions.AddServiceAction">
            <interceptor-ref name="fileUpload">
                <param name="maximumSize">2102840</param>
                <param name="allowedTypes">image/png,image/jpeg,image/jpg</param>
            </interceptor-ref>
            <interceptor-ref name="basicStack"></interceptor-ref>
            <result name="success">admin/home.jsp</result>
            <result name="fail" type="redirectAction">
                <param name="actionName">loadCategoryType</param>
                <param name="locationPlace">service</param>
                <param name="mess">${mess}</param>
            </result>
        </action>
        
        <action name="adminViewListAccessory" class="phuctt.actions.AdminViewListAccessoryAction">
            <result name="success">admin/view-list-accessory.jsp</result>
        </action>
        
        <action name="welcome" class="phuctt.actions.WelcomeAction">
            <result name="success">publicPage/index.jsp</result>
        </action>
        
        <action name="adminViewDetailAccessory" class="phuctt.actions.AdminViewDetailAccessoryAction">
            <result name="success">admin/view-detail-accessory.jsp</result>
            <result name="fail" type="chain">adminViewListAccessory</result>
        </action>
        
        <action name="updateAccessory" class="phuctt.actions.UpdateAccessoryAction">
            <result name="success" type="chain">adminViewListAccessory</result>
            <result name="fail">admin/view-detail-accessory.jsp</result>
        </action>
        
        <action name="deleteAccessory" class="phuctt.actions.DeleteAccessoryAction">
            <result name="success" type="chain">adminViewListAccessory</result>
        </action>
        
        <action name="adminViewListUser" class="phuctt.actions.AdminViewListUserAction">
            <result name="success">admin/view-list-user.jsp</result>
        </action>
        
        <action name="banUser" class="phuctt.actions.BanUserAction">
            <result name="member" type="chain">adminViewListUser</result>
            <result name="admin" type="chain">adminViewListAdmin</result>
        </action>
        
        <action name="activeUser" class="phuctt.actions.ActiveUserAction">
            <result name="member" type="chain">adminViewListUser</result>
            <result name="admin" type="chain">adminViewListAdmin</result>
        </action>
        
        <action name="adminViewListAdmin" class="phuctt.actions.AdminViewListAdminAction">
            <result name="success">admin/view-list-admin.jsp</result>
        </action>
        
        <action name="adminViewListStaff" class="phuctt.actions.AdminViewListStaffAction">
            <result name="success">admin/view-list-staff.jsp</result>
        </action>
        
        <action name="availableStaff" class="phuctt.actions.AvailableStaffAction">
            <result name="success" type="chain">adminViewListStaff</result>
        </action>
        
        <action name="adminViewDetailStaff" class="phuctt.actions.AdminViewDetailStaffAction">
            <result name="success">admin/view-detail-staff.jsp</result>
            <result name="fail" type="chain">adminViewListStaff</result>
        </action>
        
        <action name="updateStaff" class="phuctt.actions.UpdateStaffAction">
            <result name="success" type="chain">adminViewListStaff</result>
            <result name="fail">admin/view-detail-staff.jsp</result>
        </action>
    </package>
</struts>
